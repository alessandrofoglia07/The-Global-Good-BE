{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": false,

        "moduleResolution": "NodeNext",
        "module": "NodeNext",

        "lib": ["es2015"]
    },
    "exclude": ["node_modules"]
}
